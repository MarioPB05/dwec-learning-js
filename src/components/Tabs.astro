---
import TabHeader from "./TabHeader.astro";

const links = [
    {
        href: '#tab-exercise-1',
        text: 'Ejercicio 1',
        icon: 'mdi:message-text',
        active: true
    },
    {
        href: '#tab-exercise-2',
        text: 'Ejercicio 2',
        icon: 'mdi:sort-alphabetical-ascending',
        active: false
    },
    {
        href: '#tab-exercise-3',
        text: 'Ejercicio 3',
        icon: 'mdi:account-school',
        active: false
    },
    {
        href: '#tab-exercise-4',
        text: 'Ejercicio 4',
        icon: 'mdi:calculator',
        active: false
    },
    {
        href: '#tab-exercise-5',
        text: 'Ejercicio 5',
        icon: 'mdi:chart-bell-curve',
        active: false
    },
    {
        href: '#tab-exercise-6',
        text: 'Ejercicio 6',
        icon: 'mdi:file-document',
        active: false
    },
    {
        href: '#tab-exercise-7',
        text: 'Ejercicio 7',
        icon: 'mdi:format-list-checks',
        active: false
    }
]
---

<style>
    #cmd {
        scrollbar-width: thin; /* For Firefox */
        scrollbar-color: rgb(17, 24, 39) #1f2937; /* For Firefox */
    }

    #cmd::-webkit-scrollbar {
        width: 30px;
    }

    #cmd::-webkit-scrollbar-track {
        background: rgb(17, 24, 39); /* Dark background, similar to terminal */
    }
</style>

<div class="md:flex w-full container">
    <TabHeader links={links}/>

    <div class="p-6 bg-slate-700 text-medium text-white rounded-lg w-full">
        <div id="tabs-container" class="grid lg:grid-cols-2 gap-4 p-4 h-full">
            <slot/>

            <div class="pt-4 lg:pt-0 lg:ps-10">
                <div class="coding inverse-toggle shadow-lg text-gray-100 text-sm font-mono
                            bg-gray-800 rounded-lg leading-normal">
                    <div class="top flex sticky top-0 py-4 px-4 bg-gray-900 rounded-lg">
                        <div class="h-3 w-3 bg-red-500 rounded-full"></div>
                        <div class="ml-2 h-3 w-3 bg-orange-300 rounded-full"></div>
                        <div class="ml-2 h-3 w-3 bg-green-500 rounded-full"></div>
                    </div>
                    <div id="cmd" class="px-5 overflow-y-scroll h-full max-h-[400px] pb-6 ">
                        <div class="mt-4 flex">
                            <p class="flex-1 typing items-center text-gray-400">
                                <span id="cmd-start-msg"></span>
                            </p>
                        </div>

                        <div id="cmd-template" class="hidden">
                            <div class="mt-4 flex">
                                <span class="text-green-400">Mario-AI:~$</span>
                                <p class="flex-1 typing items-center pl-2 text-gray-400 text">
                                    <span class="cmd-command"></span>
                                </p>
                            </div>

                            <div class="mt-2 flex">
                                <p class="flex-1 typing items-center text-gray-400 text">
                                    <span class="cmd-output"></span>
                                </p>
                            </div>
                        </div>

                        <div id="cmd-input-container" class="mt-4 hidden">
                            <span class="text-green-400">Mario-AI:~$</span>
                            <p class="flex-1 typing items-center pl-2 text-gray-400">
                                <input id="cmd-input" class="w-full bg-transparent focus-visible:outline-none"
                                       maxlength="20"/>
                                <br>
                            </p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>